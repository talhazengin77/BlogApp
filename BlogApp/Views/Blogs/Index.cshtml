@model IEnumerable<BlogApp.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />

@if (TempData["Blog"] != null)
{
    var blog = (BlogApp.Models.Blog)TempData["Blog"];

    <div class="alert alert-info" role="alert">
       <strong><span class="glyphicon glyphicon-ok" ></span>@blog.Title</strong> edited.
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Home)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.Confirmation)
                {
                    <label class="label label-success">Confirmed!</label>
                }
                else
                {
                    <label class="label label-danger">Rejected!</label>
                }
                @Html.DisplayFor(modelItem => item.Confirmation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Home)
                @if (item.Home)
                {
                    <label class="label label-success">Confirmed!</label>
                }
                else
                {
                    <label class="label label-danger">Rejected!</label>
                }
            </td>
            <td style="width:175px">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-xs btn-success" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn-xs btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-xs btn-danger" })
            </td>
        </tr>
    }

</table>
